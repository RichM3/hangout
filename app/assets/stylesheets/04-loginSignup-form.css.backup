.login-form-container {
   display: flex;
   justify-content: center;
   padding-top: 100px;
   height: 480px;
   background-color: #fafafa;
 }

 .login-form {
   display: flex;
   justify-content: center;
   flex-direction: column;
 }

 .login-top {
   width: 100%;
   display: flex;
   align-items: baseline;
   /* border: 1px solid black; */
  /* border: 1px solid rgba(0,0,0,.12) !important;
  border-bottom: 1px solid rgba(0,0,0,.26) !important; */
  /* margin-left: 10px; */

}

h2.login-label {
  /* margin-right: 10px; */
   font-size: 34px;
   font-weight: 700;
   padding-bottom: 8px;
}

 .color-link {
   color: #1F24CC;
   font-weight: 600;
 }

 .small-bold {
   font-size: 13px;
   font-weight: 500;
 }

 .login-input {
    background-color: #fafafa;
    border-radius: 3px;
    border: 1px solid rgba(0,0,0,.12);
    box-shadow: none;
    box-sizing: border-box;
    margin: 0 0 4px;
    max-width: 100%;
    padding: 8px;
    width: 425.14px;
    height: 39.2px;
    margin-bottom: 50px;
 }

.top-login {
    border: 10px solid rgba(0,0,0,.12);
    padding: 16px 16px 0px;
}

.bottom-login {
    border: 10px solid rgba(0,0,0,.12);
}


.padlock {
  width: 16px;
  height: auto;
  /* border-radius: 50px; */
  /* margin-right: 10px; */
}


.login-form-box {
  box-sizing: border-box;
  font-family: Arial, Helvetica, sans-serif;
  width: 456px;
  border: 1px solid rgba(0,0,0,.26) !important;
  margin-bottom: 10px; 
  padding: 16px;
}

.session-submit {
    transition: background .15s;
    border: 1px solid rgba(0,0,0,.12);
    border-radius: 3px;
    font-size: 16px;
    font-weight: 600;
    line-height: 1.45;
    min-height: 36px;
    outline: 0;
    vertical-align: middle;
    text-align: center;
    background-color: #ed1c40;
    color: white;
    margin-top: 70px;
 }
